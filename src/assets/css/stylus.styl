@import "../../common/stylus/mixin.styl"
	.visitor-goods-watch
		position:relative
		min-height 100%
		background-color #f2f2f2
		.first-cover
			background-color rgba(0,0,0,.5)
			position fixed
			top 0
			bottom 0
			right 0
			left 0
			z-index 100
			display flex
			flex-direction column
			align-items center
			justify-content center
			.adi
				bg-imgjpg('../../components/visitor/goods/adIMG')
				width 650px
				height 800px
				border-radius 10px
			.myclose
				bg-img('../../components/visitor/goods/close')
				width 40px
				height 40px
				position absolute
				top 150px
				right 40px
				z-index 900
		.position-area
			width 100%
			height 20px
			background-color #f2f2f2
		.goods-item
			border-1px(#e1e1e1)
			width 100%
			height 360px
			padding-left 20px
			padding-right 20px
			margin-bottom 50px
			background-color #fff
			.goods-info
				display flex
				align-items center
				justify-content space-between
				height 96px
				padding-left 20px
				padding-right 20px
				.text
					font-size 30px
					color #333
					max-width 500px
					maxline(1)
					line-height 50px
				.price
					color #e72520
					font-size 30px
			.mainImg
				width 100%
				margin-top -30px
				height 280px
				border-radius 16px
				box-shadow 0px 4px 8px 0px rgba(0,0,0,.15)			
		.title
			width 100%
			height 64px
			background-color #f8f8f8
			display flex
			align-items center
			justify-content center
			.text
				color #333
				font-size 26px
		.btns
			t-border(#e1e1e1)
			position fixed
			bottom:0
			left:0
			right:0
			background-color:#fff
			display: flex
			height:96px
			.btn-car
				color:#fff
				font-size:32px
				r-border(#e1e1e1)
				display: flex
				align-items: center
				justify-content: center
				bg-img('../../components/common/car')
				background-size 40px 40px
				background-position center center
				width:105px
				height:100%
				position relative
			.count
				position absolute
				top 16px
				left 52px
				color #fff
				width 40px
				height 40px
				border-radius 50%
				background-color #e70520
				font-size 22px
				display flex
				align-items center
				justify-content center
			.btn-left
				font-size:32px
				color:#e70520
				flex:1
				display: flex
				align-items: center
				justify-content: center
		.img
			width 100%
			height 380px
			bg-imgjpg('../../components/visitor/goods/logoBG')
		.line
			height:100px
			background-color:#f8f8f8
		.shar-item
			padding:40px
			border-bottom:1px solid #e1e1e1
			.text
				font-size:32px
				color:#333
			.desc
				font-size:26px
				color:#b6b6b6
				margin-top:36px
				margin-bottom:20px
			.goods-imgs
				display:flex
				overflow:hidden
				flex-wrap:nowrap
				img
					width:210px
					height:210px
					margin-right:20px
			.item-price
				display: flex
				justify-content: space-between
				padding-top:40px
				.price
					font-size:30px
					color:#333
				.item-btns
					span
						height 60px
						padding 10px 20px 10px 20px
					.buy
						font-size 32px
						color:#fff
						border-radius 10px
						background-color #e70520
					.add
						font-size 32px
						color:#e70520
						border 1px solid #e70520
						border-radius 10px